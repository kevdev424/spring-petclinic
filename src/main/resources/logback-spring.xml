<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="otel" class="io.opentelemetry.exporter.logging.LoggingExporter">
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <timestamp>
          <timeZone>UTC</timeZone>
        </timestamp>
        <logLevel/>
        <loggerName/>
        <pattern>
          <pattern>
            {
              "otel_trace_id": "%X{trace_id}",
              "otel_span_id": "%X{span_id}"
            }
          </pattern>
        </pattern>
        <threadName/>
        <message/>
        <logstashMarkers/>
        <stackTrace/>
      </providers>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="otel"/>
  </root>
</configuration>
